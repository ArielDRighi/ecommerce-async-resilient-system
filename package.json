{
  "name": "ecommerce-async-resilient-system",
  "version": "1.0.0",
  "description": "Sistema resiliente y escalable para procesamiento asíncrono de órdenes de e-commerce",
  "author": "Tu Nombre <tu-email@domain.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/typeorm.config.ts",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans",
    "docker:full": "docker-compose up -d",
    "docker:full:stop": "docker-compose down",
    "docker:full:clean": "docker-compose down -v --remove-orphans",
    "docker:build": "docker build -t ecommerce-async-resilient-system .",
    "docker:build:prod": "docker build --target production -t ecommerce-async-resilient-system:prod .",
    "docker:run": "docker run -p 3000:3000 ecommerce-async-resilient-system",
    "docker:run:prod": "docker run -p 3000:3000 ecommerce-async-resilient-system:prod",
    "ci:lint": "npm run lint",
    "ci:format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "ci:type-check": "npm run type-check",
    "ci:test": "npm run test",
    "ci:test:e2e": "npm run test:e2e",
    "ci:test:cov": "npm run test:cov",
    "ci:build": "npm run build",
    "ci:security": "npm audit --audit-level=high",
    "ci:all": "npm run ci:lint && npm run ci:format:check && npm run ci:type-check && npm run ci:test && npm run ci:build",
    "deploy:staging": "bash ./scripts/deploy-staging.sh",
    "deploy:production": "bash ./scripts/deploy-production.sh",
    "rollback": "bash ./scripts/rollback.sh",
    "migrate": "bash ./scripts/migrate.sh",
    "migrate:dev": "bash ./scripts/migrate.sh development run",
    "migrate:staging": "bash ./scripts/migrate.sh staging run",
    "migrate:prod": "bash ./scripts/migrate.sh production run",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.10",
    "@nestjs/terminus": "^10.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.11.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "nest-winston": "^1.10.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 18,
        "functions": 11,
        "lines": 25,
        "statements": 25
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "keywords": [
    "nestjs",
    "typescript",
    "microservices",
    "async",
    "resilient",
    "e-commerce",
    "bull",
    "redis",
    "postgresql",
    "event-driven",
    "saga-pattern",
    "outbox-pattern"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
