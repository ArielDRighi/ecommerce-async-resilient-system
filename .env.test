# Test Environment Configuration
NODE_ENV=test

# Database Configuration for Testing
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=test
DATABASE_PASSWORD=test
DATABASE_NAME=test_ecommerce
DATABASE_URL=postgresql://test:test@localhost:5432/test_ecommerce

# Redis Configuration for Testing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# Application Configuration for Testing
APP_PORT=3001
APP_NAME=Ecommerce Async Resilient System (Test)
APP_VERSION=1.0.0

# Disable external services in tests
DISABLE_AUTH=true
DISABLE_NOTIFICATIONS=true
DISABLE_EXTERNAL_APIS=true

# Test Database URLs (alternative)
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/test_ecommerce
TEST_REDIS_URL=redis://localhost:6380

# Logging Configuration for Tests
LOG_LEVEL=error
LOG_FORMAT=simple
DISABLE_LOGS=true