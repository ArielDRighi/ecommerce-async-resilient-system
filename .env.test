# Test Environment Configuration
NODE_ENV=test

# Database Configuration for Testing (aligned with CI pipeline)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=test_user
DATABASE_PASSWORD=test_password
DATABASE_NAME=test_db
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db

# Redis Configuration for Testing (aligned with CI pipeline)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# Application Configuration for Testing
APP_PORT=3001
APP_NAME=Ecommerce Async Resilient System (Test)
APP_VERSION=1.0.0

# Disable external services in tests
DISABLE_AUTH=true
DISABLE_NOTIFICATIONS=true
DISABLE_EXTERNAL_APIS=true

# Test Database URLs (alternative - for CI/CD environments)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/0

# Logging Configuration for Tests
LOG_LEVEL=error
LOG_FORMAT=simple
DISABLE_LOGS=true